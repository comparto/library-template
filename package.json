{
  "name": "your-package-name",
  "version": "0.0.0",
  "main": "src/index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/your-repo-user/your-repo-name.git"
  },
  "author": "@jimmy-guzman <jimmy.guzman@outlook.com>",
  "license": "MIT",
  "keywords": [],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "format": "prettier '**/**/*.{md,yml,json}'",
    "format:check": "yarn format -c",
    "format:write": "yarn format -w",
    "lint": "eslint --cache --color --cache-location ./node_modules/.cache/eslint/ . --ext .js",
    "lint:fix": "yarn lint --fix",
    "test": "jest --coverage --passWithNoTests",
    "test:watch": "jest --watch",
    "validate": "run-p lint format:check test",
    "cz": "npx gitzy --commitlint"
  },
  "prettier": "@comparto/prettier-config",
  "husky": {
    "hooks": {
      "commit-msg": "[[ -n $HUSKY_BYPASS ]] || commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{md,yml,json}": [
      "prettier --write"
    ],
    "*.{js}": [
      "eslint --fix"
    ]
  },
  "peerDependencies": {},
  "dependencies": {},
  "devDependencies": {
    "@comparto/eslint-config": "^6.1.0",
    "@comparto/prettier-config": "^1.1.0",
    "commitlint": "^11.0.0",
    "eslint": "^7.19.0",
    "gitzy": "^1.3.1",
    "husky": "^4.3.8",
    "jest": "^26.6.3",
    "lint-staged": "^10.5.3",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.2.1",
    "typescript": "^4.1.3"
  },
  "files": [
    "src"
  ],
  "volta": {
    "node": "14.15.4",
    "yarn": "1.22.10"
  }
}
